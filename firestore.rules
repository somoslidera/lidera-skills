rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is master
    function isMaster() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'master';
    }
    
    // Helper function to check if user can manage users
    // Permite se é master OU se não tem user_roles configurado (dono inicial)
    function canManageUsers() {
      return isAuthenticated() && (
        isMaster() ||
        !exists(/databases/$(database)/documents/user_roles/$(request.auth.uid))
      );
    }
    
    // Helper function to check if user has access to company
    // Simplificado: permite acesso se é master OU se não tem user_roles configurado (fallback permissivo)
    function hasCompanyAccess(companyId) {
      return isAuthenticated() && (
        isMaster() ||
        !exists(/databases/$(database)/documents/user_roles/$(request.auth.uid))
      );
    }
    
    // Companies collection - readable by all authenticated users, writable by master
    match /companies/{companyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isMaster();
    }
    
    // User roles collection - only master can read/write
    match /user_roles/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isMaster());
      allow write: if isMaster();
    }
    
    // Universal collections (sectors, roles, evaluation_criteria)
    match /sectors/{sectorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /evaluation_criteria/{criteriaId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Company-specific collections
    match /employees/{employeeId} {
      // Permite leitura se usuário autenticado e tem acesso à empresa OU se não tem companyId
      allow read: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
      
      // Permite criação se usuário autenticado e tem acesso à empresa OU se não tem companyId
      allow create: if isAuthenticated() && (
        !('companyId' in request.resource.data) || 
        hasCompanyAccess(request.resource.data.companyId)
      );
      
      // Permite atualização/exclusão se usuário autenticado e tem acesso à empresa
      allow update, delete: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
    }
    
    match /evaluations/{evaluationId} {
      // Permite leitura se usuário autenticado e tem acesso à empresa OU se não tem companyId
      allow read: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
      
      // Permite criação se usuário autenticado e tem acesso à empresa OU se não tem companyId
      allow create: if isAuthenticated() && (
        !('companyId' in request.resource.data) || 
        hasCompanyAccess(request.resource.data.companyId)
      );
      
      // Permite atualização/exclusão se usuário autenticado e tem acesso à empresa
      allow update, delete: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
    }
    
    // Performance goals collection
    match /performance_goals/{goalId} {
      allow read: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
      allow write: if isAuthenticated() && (
        !('companyId' in request.resource.data) || 
        hasCompanyAccess(request.resource.data.companyId)
      );
    }
    
    // Audit logs collection
    match /audit_logs/{logId} {
      allow read: if isAuthenticated() && (
        !('companyId' in resource.data) || 
        hasCompanyAccess(resource.data.companyId)
      );
      allow create: if isAuthenticated();
    }
    
    // Users collection
    // Permite leitura para usuários autenticados
    // Permite escrita para master OU para usuários sem role configurado (dono inicial)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if canManageUsers();
    }
    
    // Default deny for any other collection
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
